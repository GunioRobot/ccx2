# Maintainer palbo <quuxbaz@gmail.com>
pkgname=ccx2-git
pkgver=20090308
pkgrel=1
pkgdesc="Console client for xmms2"
arch=(i686 x86_64)
url="http://github.com/palbo/ccx2"
license=("BSD")
depends=("ncurses" "python" "xmms2-git")
optdepends=("pil")
provides=(ccx2)
conflicts=(ccx2)
source=()
md5sums=()

_gitroot="git://github.com/palbo/ccx2.git"
_gitname="ccx2"

build() {
  cd $srcdir

  if [ -d $srcdir/$_gitname ] ; then
    cd $_gitname && git pull origin
  else
    git clone $_gitroot
    cd $_gitname
  fi

  rm -rf $srcdir/$_gitname-build
  cp -r $srcdir/$_gitname $srcdir/$_gitname-build

  cd $srcdir/$_gitname-build
  python setup.py install --root=$pkgdir || return 1

  install -D -m644 LICENSE "$pkgdir/usr/share/licenses/ccx2/LICENSE" || return 1
}
